# Stellar Network Configuration
NODE_ENV=development

# Stellar Network Settings (Vite requires VITE_ prefix for client-side access)
VITE_STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org
VITE_STELLAR_NETWORK_PASSPHRASE=Test SDF Network ; September 2015

# Freighter Wallet Configuration
VITE_FREIGHTER_TIMEOUT=30000
VITE_FREIGHTER_ALLOW_CUSTOM_NETWORK=false

# Application Settings
VITE_APP_NAME=Stellar StakingHouse
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Decentralized staking on Stellar

# Development Settings
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=info
